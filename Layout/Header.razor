@using FlexPro.Client.Pages.Site.Contato
@inject IDialogService DialogService
<header class="header">
	<div class="logo">
		<img src="assets/images/logo-proauto.png" alt="Logo da Empresa">
	</div>
	<button class="menu-toggle">
		â˜°
	</button>
	
	<nav class="menu">
		<ul>
			<li>
				<a href="">Home</a>
			</li>
			@* <li> *@
			@* 	<a Href="Produtos/lista">Produtos</a> *@
			@* </li> *@
			<li>
				<a Href="Empresa">Empresa</a>
			</li>
			<li>
				<a @onclick="OpenDialogAsync">Contato</a>
			</li>
		</ul>
	</nav>
	<div>
		<ul class="grp-menu">
			<li class="menu">
				<a href="Account/login">
					Login
				</a>
			</li>
			<li class="carrinho-container">
				<a href="#">
					<MudBadge Content="@ItensCarrinho" Overlap="true" Color="Color.Error" Visible="@(ItensCarrinho > 0)">
						<img src="assets/images/carrinho-compras.png" alt="Carrinho de compras">
					</MudBadge>
				</a>
			</li>
		</ul>
	</div>
</header>

@code {
	private int ItensCarrinho;

	protected override Task OnInitializedAsync()
	{
		ItensCarrinho = 0;
		return base.OnInitializedAsync();
	}
	
	private Task OpenDialogAsync()
	{
		var options = new DialogOptions { CloseOnEscapeKey = true, MaxWidth = MaxWidth.Medium, FullWidth = true};
		return DialogService.ShowAsync<Contato>("Entre em Contato", options);
	}

}