@page "/404"

<div class="background-shapes">
    <div class="shape"></div>
    <div class="shape"></div>
    <div class="shape"></div>
</div>
<div class="container">
    <h1>404</h1>
    <p>Oops! Parece que você se perdeu...</p>
    <p>A página que você está procurando não foi encontrada.</p>
    <a href="/" class="btn">Voltar para a Página Inicial</a>
</div>

<style>
    body {
        margin: 0;
        padding: 0;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        font-family: 'Arial', sans-serif;
        background: linear-gradient(135deg, #232E61, #57c1ab);
        overflow: hidden;
    }

    .container {
        text-align: center;
        color: #fff;
        animation: fadeIn 1s ease-in-out;
    }

    h1 {
        font-size: 6rem;
        margin: 0;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
    }

    p {
        font-size: 1.5rem;
        margin: 20px 0;
    }

    .btn {
        display: inline-block;
        padding: 12px 24px;
        background-color: #fff;
        color: #6e8efb;
        text-decoration: none;
        border-radius: 25px;
        font-weight: bold;
        transition: transform 0.3s, box-shadow 0.3s;
    }

    .btn:hover {
        transform: translateY(-3px);
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    }

    .background-shapes {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
        overflow: hidden;
    }

    .shape {
        position: absolute;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 50%;
        animation: float 15s infinite ease-in-out;
    }

    .shape:nth-child(1) {
        width: 100px;
        height: 100px;
        top: 10%;
        left: 15%;
        animation-duration: 12s;
    }

    .shape:nth-child(2) {
        width: 150px;
        height: 150px;
        top: 60%;
        left: 70%;
        animation-duration: 18s;
    }

    .shape:nth-child(3) {
        width: 80px;
        height: 80px;
        top: 40%;
        left: 30%;
        animation-duration: 10s;
    }

    @@keyframes float {
        0% {
            transform: translateY(0);
        }
        50% {
            transform: translateY(-20px);
        }
        100% {
            transform: translateY(0);
        }
    }

    @@keyframes fadeIn {
        0% {
            opacity: 0;
            transform: translateY(20px);
        }
        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@media (max-width: 600px) {
        h1 {
            font-size: 4rem;
        }

        p {
            font-size: 1.2rem;
        }
    }
</style>

<script>
    document.addEventListener('mousemove', (e) => {
        const shapes = document.querySelectorAll('.shape');
        shapes.forEach(shape => {
            const speed = 0.05;
            const x = (window.innerWidth - e.pageX) * speed;
            const y = (window.innerHeight - e.pageY) * speed;
            shape.style.transform = `translate(${x}px, ${y}px)`;
        });
    });
</script>